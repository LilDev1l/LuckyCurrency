<Window x:Class="LuckyCurrency.Views.Autorization.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuckyCurrency.Views.Autorization"
        xmlns:vm="clr-namespace:LuckyCurrency.ViewModels.Autorization"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Registration" Height="420" Width="340">

    <Window.DataContext>
        <vm:RegistrationViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 15" >
            <TextBlock FontSize="32" Margin="0 15" HorizontalAlignment="Center">LuckyCurrency</TextBlock>
            <TextBlock FontSize="12"  HorizontalAlignment="Center" Text="{Binding InfoMessage}"></TextBlock>
            <StackPanel Margin="0 10" >
                <TextBlock>Логин</TextBlock>
                <TextBox x:Name="LoginBox" Text="{Binding Login, Mode=TwoWay}"></TextBox>
            </StackPanel>
            <StackPanel Margin="0 10">
                <TextBlock>Пароль</TextBlock>
                <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_OnPasswordChanged" ></PasswordBox>
            </StackPanel>
            <StackPanel Margin="0 10">
                <TextBlock>Повторите пароль</TextBlock>
                <PasswordBox x:Name="RepeatPasswordBox" PasswordChanged="RepeatPasswordBox_OnPasswordChanged"></PasswordBox>
            </StackPanel>

            <Button x:Name="EnterButton" 
                    Margin="0 10"
                    Command="{Binding RegistrationCommand}"
                    >
                <Button.Content>
                    <TextBlock>Регистрация</TextBlock>
                </Button.Content>
            </Button>
            <StackPanel Margin="0 5">
                <Button Command="{Binding SwitchToLoginCommand}">
                    <TextBlock>Войти</TextBlock>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
